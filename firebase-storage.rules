rules_version = '2';

// Firebase Storage Security Rules for Amritva Overseas
// Copy these rules to your Firebase Console:
// 1. Go to Firebase Console (https://console.firebase.google.com)
// 2. Select your project: import-export-6282f
// 3. Go to Storage > Rules
// 4. Replace the existing rules with these
// 5. Click "Publish"

service firebase.storage {
  match /b/{bucket}/o {
    
    // Product images - publicly readable, authenticated users can write
    match /product-images/{allPaths=**} {
      // Anyone can view/download product images
      allow read: if true;
      
      // Only authenticated users can upload/modify/delete
      allow write: if request.auth != null;
    }
    
    // Default rule - deny everything else
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
